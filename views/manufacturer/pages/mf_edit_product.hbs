<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Chỉnh sửa sản phẩm</title>

  <!-- Custom fonts for this template-->
  <link href="../../../assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="../../../assets/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

   <!-- Header -->
  <div class="container">
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

      <!-- Home button -->
      <div>
        <a class="fa fa-home" style="font-size:25px;color:dimgrey" href="/manufacturer"></a>
      </div>

      <!-- Topbar Navbar -->
      <ul class="navbar-nav ml-auto">

        <!-- Nav Item - User Information -->
        <li class="nav-item dropdown no-arrow">
          <a class="nav-link dropdown-toggle" href="/manufacturer" id="userDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Manufacturer</span>
            <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
          </a>

          <!-- Dropdown - User Information -->
          <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="/manufacturer/profile">
              <i class="fas fa-address-card fa-sm fa-fw mr-2 text-gray-400"></i>
              Cá nhân
            </a>
            <a class="dropdown-item" href="/manufacturer/product">
              <i class="fas fa-calendar-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Quản lí kho
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/logout">
              <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Logout
            </a>
          </div>
        </li>
      </ul>
    </nav>
  </div>

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->

            <div class="row">
              <div class="col-lg-6 d-none d-lg-block">
                <img src="https://source.unsplash.com/random/440x490">
              </div>

              <div class="col-lg-6 d-none d-lg-block">
                <button class="btn btn-primary" onclick="back()"
                  style="margin-bottom: 1%;margin-top: 3%; margin-left: 89%"> X </button>

                <div class="col-lg-11 container-fluid">

                  {{#if message}}
                  <div class="alert alert-danger text-center" role="alert">
                    {{this.message}}
                  </div>
                  {{/if}}
                  {{#if success}}
                  <div class="alert alert-success text-center" role="alert">
                    {{this.success}}
                  </div>
                  {{/if}}
                  
                  <h2 style="font-weight: bold; text-align: center">Thông tin sản phẩm</h2>

                  {{# each warehouses}}
                  {{# each this}}
                  <form class="user" method="POST" action="/manufacturer/product/edit">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" id="" name="nameproduct"
                        value="{{this.product_id.name}}" required>
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" id="" name="description"
                        value="{{this.product_id.desription}}" required>
                    </div>
                    <div class="form-group">
                      <input type="number" min="0" class="form-control form-control-user" id="" name="quatity"
                        value="{{this.quatity}}" required>
                    </div>
                    <div class="form-group">
                      <input type="date" class="form-control form-control-user" id="createDate" name="createDate"
                        value="{{this.product_id.createDate}}">
                    </div>
                    <div class="form-group">
                      <input type="date" class="form-control form-control-user" id="expireDate" name="expireDate"
                        value="{{this.product_id.expireDate}}">
                    </div>
                    <input type="hidden" name="id_product" value="{{this.product_id._id}}">
                    <button type="submit" class="btn btn-primary" style="margin-left: 83%; width:60px">
                      <i class="fas fa-edit" aria-hidden="true"></i>
                    </button>
                  </form>
                  {{/each}}
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <script>
    function back() {
      history.back();
    }

    $(document).ready(function(){
      var minExpireDate = $("#createDate").val();
      $("#expireDate").min(minExpireDate);
    })
  </script>

</body>

</html>