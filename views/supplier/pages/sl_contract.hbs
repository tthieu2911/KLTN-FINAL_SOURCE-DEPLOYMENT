<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quản lí đơn hàng</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link type="text/css" href="../assets/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- Custom fonts for this template-->
  <link href="../assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="../assets/css/sb-admin-2.min.css" rel="stylesheet">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</head>

<body>

  <div class="container">
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
      <!-- Home button -->
      <div>
        <a class="fa fa-home" style="font-size:25px;color:dimgrey" href="/supplier"></a>
      </div>

      <!-- Topbar Search -->
      <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
        <div class="input-group">
          <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm..." aria-label="Search"
            aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-primary" type="button">
              <i class="fas fa-search fa-sm"></i>
            </button>
          </div>
        </div>
      </form>

      <!-- Topbar Navbar -->
      <ul class="navbar-nav ml-auto">

        <!-- Nav Item - User Information -->
        <li class="nav-item dropdown no-arrow">
          <a class="nav-link dropdown-toggle" href="/supplier" id="userDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Supplier</span>
            <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
          </a>

          <!-- Dropdown - User Information -->
          <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="/supplier/profile">
              <i class="fas fa-address-card fa-sm fa-fw mr-2 text-gray-400"></i>
              Cá nhân
            </a>
            <a class="dropdown-item" href="/supplier/product">
              <i class="fas fa-calendar-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Quản lí kho
            </a>
            <a class="dropdown-item" href="/supplier/market">
              <i class="fas fa-shopping-cart fa-sm fa-fw mr-2 text-gray-400"></i>
              Mua sản phẩm
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/logout">
              <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Logout
            </a>
          </div>
        </li>
      </ul>
    </nav>
  </div>

  <div class="container">
    <h1>Quản lí thông tin đơn mua hàng</h1>
    <hr>
    <br>

    <h3 class="text-center">Danh sách đơn hàng</h3>
    <table id="contract-list" class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Tên sản phẩm</th>
          <th scope="col">Giá trị</th>
          <th scope="col">Đơn vị tính</th>
          <th scope="col">Số lượng</th>
          <th scope="col">Người bán hàng</th>
          <th scope="col">Người vận chuyển</th>
          <th scope="col">Trạng thái</th>
          <th colspan="4" scope="col">Thao tác</th>
        </tr>
      </thead>
      <tbody>
        {{# each contracts}}
        {{# each this}}
        <tr>
          <input class="hdnStatus" type="hidden" name="hdnStt" value="{{this.status}}">
          <td>{{this.product_id.name}}</td>
          <td>{{this.price}}</td>
          <td>{{this.currency}}</td>
          <td>{{this.quatity}}</td>
          <td>{{this.seller_id.fullName}}</td>
          <td>{{this.shipper_id.fullName}}</td>
          <td id="sttDescription"></td>
          <td class="text-center">
            <a href="/supplier/cancel/{{this._id}}"><button type="" class="btn btn-danger btnCancel">
              <i class="fas fa-trash" aria-hidden="true"></i>
            </button></a>
          </td>
          <td class="text-center">
            <a href="/supplier/accept/{{this._id}}"><button type="" class="btn btn-success btnAccept">
              <i class="fas fa-clipboard-check" aria-hidden="true"></i>
            </button></a>
          </td>
          <td class="text-center">
            <a href="/supplier/done/{{this._id}}"><button type="" class="btn btn-warning btnReceive">
              <i class="fas fa-box-open" aria-hidden="true"></i>
          </td>
          <td class="text-center">
            <a href="/supplier/detail/{{this._id}}"><button type="" class="btn btn-info btnDetail">
              <i class="fas fa-info" aria-hidden="true"></i>
            </button>
          </a>
          </td>
        </tr>
        {{/each}}
        {{/each}}
      </tbody>
    </table>
    <nav aria-label="Page navigation example">
      {{{paginateHelper pagination}}}
    </nav>

  </div>



  <!-- Jquery handling -->
  <script>

    $(document).ready(function () {

      $("#contract-list tr").each(function () {
        var stt = $(this).find(".hdnStatus").val();

        // Disable all button
        $(this).find(".btnCancel").hide();
        $(this).find(".btnAccept").hide();
        $(this).find(".btnReceive").hide();
        
        $(this).find(".btnDetail").show();

        // handle for Cancel button
        if (stt == "0" || stt == "1" ) {
          $(this).find(".btnCancel").show();
        }
        else {
          $(this).find(".btnCancel").hide();
        }

        // handle for Accept price button
        if (stt == "1") {
          $(this).find(".btnAccept").show();
        }
        else {
          $(this).find(".btnAccept").hide();
        }

        // handle for Send price button
        if (stt == "4") {
          $(this).find(".btnReceive").show();
        }
        else {
          $(this).find(".btnReceive").hide();
        }


        // handle for Status Description
        var sttDescription = $(this).find("#sttDescription");
        
        switch(stt) {
          case '0':
            sttDescription.html("Đặt hàng");
            break;
          case '1':
            sttDescription.html("Báo giá");
            break;
          case '2':
            sttDescription.html("Xác nhận báo giá");
            break;
          case '3':
            sttDescription.html("Chờ vận chuyển");
            break;
          case '4':
            sttDescription.html("Đang vận chuyển");
            break;
          case '5':
            sttDescription.html("Đã nhận hàng");
            break;
          case '6':
            sttDescription.html("Đã hủy");
            break;
        }
      })

    });
  </script>

</body>

</html>