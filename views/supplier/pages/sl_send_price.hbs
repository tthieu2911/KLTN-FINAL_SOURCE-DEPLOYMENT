<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Định giá đơn hàng</title>

  <!-- Custom fonts for this template-->
  <link href="../../assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="../../assets/css/sb-admin-2.min.css" rel="stylesheet">
  <!-- Bootstrap core JavaScript-->
  <script src="../../assets/vendor/jquery/jquery.min.js"></script>
  <script src="../../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="../../assets/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="../../assets/js/sb-admin-2.min.js"></script>


</head>

<body>

  <!-- Header -->
  <div class="container">
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

      <!-- Home button -->
      <div>
        <a class="fa fa-home" style="font-size:25px;color:dimgrey" href="/supplier"></a>
      </div>

      <!-- Topbar Navbar -->
      <ul class="navbar-nav ml-auto">

        <!-- Nav Item - User Information -->
        <li class="nav-item dropdown no-arrow">
          <a class="nav-link dropdown-toggle" href="/supplier" id="userDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Supplier</span>
            <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
          </a>

          <!-- Dropdown - User Information -->
          <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="/supplier/profile">
              <i class="fas fa-address-card fa-sm fa-fw mr-2 text-gray-400"></i>
              Cá nhân
            </a>
            <a class="dropdown-item" href="/supplier/manacontract">
              <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
              Quản lí đơn mua hàng
            </a>
            <a class="dropdown-item" href="/supplier/product">
              <i class="fas fa-calendar-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Quản lí kho
            </a>
            <a class="dropdown-item" href="/supplier/market">
              <i class="fas fa-shopping-cart fa-sm fa-fw mr-2 text-gray-400"></i>
              Mua sản phẩm
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/logout">
              <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Logout
            </a>
          </div>
        </li>
      </ul>
    </nav>
  </div>

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block">
                <img src="https://source.unsplash.com/random/460x410">
              </div>
              <div class="col-lg-6">
                <!-- Exit button -->
                <button class="btn btn-primary" onclick="back()"
                  style="margin-bottom: 1%;margin-top: 3%; margin-left: 89%;"> X </button>

                <h4 style="font-weight: bold; text-align:center;">Thông tin đơn hàng</h4>

                <div class="container-fluid">
                  <form action="/supplier/price" method="post">
                    <div class="form-group">

                      <table class="table">
                        {{# each contracts}}
                        {{# each this}}
                        <input type="hidden" name="contract_id" value="{{this._id}}">
                        <tr>
                          <th>Tên sản phẩm:</th>
                          <td>{{this.product_id.name}}</td>
                        </tr>
                        <tr>
                          <th>Người mua hàng:</th>
                          <td>{{this.buyer_id.fullName}}</td>
                        </tr>
                        <tr>
                          <th>Số lượng:</th>
                          <td>{{this.quatity}}</td>
                        </tr>
                        <tr>
                          <th>Địa chỉ giao hàng:</th>
                          <td>{{this.shipTo}}</td>
                        </tr>
                        {{/each}}
                        {{/each}}
                        {{# each warehouses}}
                        {{# each this}}
                        <tr>
                          <th>Địa chỉ lấy hàng:</th>
                          <td><input type="text" class="form-control form-control-user" id="" name="ship_from"
                              value="{{this.warehouse_address}}" required></td>
                        </tr>
                        {{/each}}
                        {{/each}}
                      </table>
                    </div>
                    <div class="form-group">
                      <p><b>Tổng giá trị đơn hàng: </b></p>
                      <input type="number" min="0" class="form-control" id="price" name="price"
                        placeholder="Giá trị đơn hàng" required>
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin-left:86%; margin-bottom:5% ">
                      <i class="fas fa-check" aria-hidden="true"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function back() {
      history.back();
    }
  </script>

</body>

</html>