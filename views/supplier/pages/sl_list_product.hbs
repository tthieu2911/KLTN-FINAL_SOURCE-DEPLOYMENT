<!DOCTYPE html>
<html lang="en">

<head>
  <title>Danh sách Hàng hóa</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link type="text/css" href="../assets/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- Custom fonts for this template-->
  <link href="../assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="../assets/css/sb-admin-2.min.css" rel="stylesheet">
  <script lang="javascript" src="../assets/js/script.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script href="../assets/js/script.js"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</head>

<body>

  <div class="container">
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

      <!-- Home button -->
      <div>
        <a class="fa fa-home" style="font-size:25px;color:dimgrey" href="/supplier"></a>
      </div>

      <!-- Topbar Search -->
      <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
        <div class="input-group">
          <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm..." aria-label="Search"
            aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-primary" type="button">
              <i class="fas fa-search fa-sm"></i>
            </button>
          </div>
        </div>
      </form>

      <!-- Topbar Navbar -->
      <ul class="navbar-nav ml-auto">

        <!-- Nav Item - User Information -->
        <li class="nav-item dropdown no-arrow">
          <a class="nav-link dropdown-toggle" href="/supplier" id="userDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Supplier</span>
            <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
          </a>

          <!-- Dropdown - User Information -->
          <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="/supplier/profile">
              <i class="fas fa-address-card fa-sm fa-fw mr-2 text-gray-400"></i>
              Cá nhân
            </a>
            <a class="dropdown-item" href="/supplier/manacontract">
              <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
              Quản lí đơn mua hàng
            </a>
            <a class="dropdown-item" href="/supplier/market">
              <i class="fas fa-shopping-cart fa-sm fa-fw mr-2 text-gray-400"></i>
              Mua sản phẩm
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/logout">
              <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Logout
            </a>
          </div>
        </li>
      </ul>
    </nav>
  </div>

  <div class="container">
    <h2>Quản lý Hàng Hóa</h2>

    <button id="btnCreateProduct" class="btn btn-primary" style="margin-bottom:20px;">
      <i class="fas fa-plus" aria-hidden="true"></i>
    </button>

    <!-- Create product window -->
    <div id="hdnCreateProduct" class="popup slide-window" style="display: none">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block">
                <img src="https://source.unsplash.com/random/410x360">
              </div>
              <div class="col-lg-6">
                <!-- Close button -->
                <div>
                  <span style="margin-bottom: 1%;margin-top: 3%; margin-left: 89%" class="close rounded">X</span>
                </div>

                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Tạo sản phẩm</h1>
                  </div>
                  <form class="user" method="POST" action="/supplier/product">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" required id="" name="nameProduct"
                        placeholder="Tên sản phẩm">
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" required id="" name="desription"
                        placeholder="Mô tả sản phẩm">
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                      Tạo mới
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <table class="table table-striped ">
      <thead class="thead-dark text-center">
        <tr>
          <th scope="col">Tên sản phẩm</th>
          <th scope="col">Nhà cung cấp</th>
          <th scope="col">Mô tả</th>
          <th scope="col">Số lượng trong kho</th>
          <th colspan="2" scope="col" >Thao tác</th>
        </tr>
      </thead>
      <tbody>
        {{# each products}}
        {{# each this}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.supplier_id.fullName}}</td>
          <td>{{this.desription}}</td>
          <td>{{this.quatity}}</td>
          <td class="text-center">
            <a id="delete" href="/supplier/product/delete/{{this.id}}" onclick="return check()">
              <button type="button" class="btn btn-danger">
                <i class="fas fa-trash" aria-hidden="true"></i>
              </button>
            </a>
          </td>
          <td class="text-center">
            <a id="edit" href="/supplier/product/edit/{{this.id}}">
              <button type="button" class="btn btn-info">
                <i class="fas fa-edit" aria-hidden="true"></i>
              </button>
            </a>
          </td>
        </tr>
        {{/each}}
        {{/each}}
      </tbody>
    </table>
     <nav aria-label="Page navigation example">
      {{{paginateHelper pagination}}}
      </nav>
  </div>

  <!-- Jquery handling -->
  <script>
    $(document).ready(function () {

      $(".close").on('click', function () {
        $(this).closest(".popup").hide(1000);
      })

      $("#btnCreateProduct").on('click', function () {
        $("#hdnCreateProduct").show(1000);
      })
    });

  </script>

</body>

</html>