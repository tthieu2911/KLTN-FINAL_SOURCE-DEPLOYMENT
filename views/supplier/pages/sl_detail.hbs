<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Chi tiết đơn hàng</title>

  <!-- Custom fonts for this template-->
  <link href="../../assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="../../assets/css/sb-admin-2.min.css" rel="stylesheet">
  <!-- Bootstrap core JavaScript-->
  <script src="../../assets/vendor/jquery/jquery.min.js"></script>
  <script src="../../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="../../assets/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="../../assets/js/sb-admin-2.min.js"></script>


</head>

<body>

  <!-- Header -->
  <div class="container">
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

      <!-- Home button -->
      <div>
        <a class="fa fa-home" style="font-size:25px;color:dimgrey" href="/supplier"></a>
      </div>

      <!-- Topbar Navbar -->
      <ul class="navbar-nav ml-auto">

        <!-- Nav Item - User Information -->
        <li class="nav-item dropdown no-arrow">
          <a class="nav-link dropdown-toggle" href="/supplier" id="userDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Supplier</span>
            <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
          </a>

          <!-- Dropdown - User Information -->
          <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="/supplier/profile">
              <i class="fas fa-address-card fa-sm fa-fw mr-2 text-gray-400"></i>
              Cá nhân
            </a>
            <a class="dropdown-item" href="/supplier/manacontract">
              <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
              Quản lí đơn mua hàng
            </a>
            <a class="dropdown-item" href="/supplier/product">
              <i class="fas fa-calendar-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Quản lí kho
            </a>
            <a class="dropdown-item" href="/supplier/market">
              <i class="fas fa-shopping-cart fa-sm fa-fw mr-2 text-gray-400"></i>
              Mua sản phẩm
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/logout">
              <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
              Logout
            </a>
          </div>
        </li>
      </ul>
    </nav>
  </div>

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block">
                <img src="https://source.unsplash.com/random/460x700">
              </div>
              <div class="col-lg-6">
                <!-- Exit button -->
                <button class="btn btn-primary" onclick="back()"
                  style="margin-bottom: 1%;margin-top: 3%; margin-left: 89%;"> X </button>

                <h4 style="font-weight: bold; text-align:center;">Thông tin đơn hàng</h4>
                {{# each contracts}}
                {{# each this}}
                <div class="container-fluid">
                  <table class="table contract-detail">
                    <tr>
                      <th>Tên sản phẩm</th>
                      <td>{{this.product_id.name}}</td>
                    </tr>
                    <tr>
                      <th>Người bán hàng</th>
                      <td>{{this.seller_id.fullName}}</td>
                    </tr>
                    <tr>
                      <th>Người mua hàng</th>
                      <td>{{this.buyer_id.fullName}}</td>
                    </tr>
                    <tr>
                      <th>Người vận chuyển</th>
                      <td>{{this.shipper_id.fullName}}</td>
                    </tr>
                    <tr>
                      <th>Giá trị </th>
                      <td>{{this.price}}</td>
                    </tr>
                    <tr>
                      <th>Đơn vị tính</th>
                      <td>{{this.currency}}</td>
                    </tr>
                    <tr>
                      <th>Số lượng</th>
                      <td>{{this.quatity}}</td>
                    </tr>
                    <tr>
                      <th>Địa chỉ giao hàng</th>
                      <td>{{this.shipTo}}</td>
                    </tr>
                    <tr>
                      <th>Địa chỉ lấy hàng</th>
                      <td>{{this.shipFrom}}</td>
                    </tr>
                    <tr>
                      <th>Ngày đặt hàng</th>
                      <td id="createDate"></td>
                      <input class="hdnCreateDate" type="hidden" name="hdnCreateDate" value="{{this.createDate}}">
                    </tr>
                    <tr>
                      <th>Ngày giao hàng</th>
                      <td id="shipDate"></td>
                      <input class="hdnShipDate" type="hidden" name="hdnShipDate" value="{{this.shipDate}}">
                      </td>
                    </tr>
                    <tr>
                      <th>Ngày nhận hàng</th>
                      <td id="receiveDate"></td>
                      <input class="hdnReceiveDate" type="hidden" name="hdnReceiveDate" value="{{this.receiveDate}}">
                    </tr>
                    <tr>
                      <th>Tình trạng đơn hàng</th>
                      <td id="sttDescription"></td>
                      <input class="hdnStatus" type="hidden" name="hdnStatus" value="{{this.status}}">
                    </tr>
                  </table>
                </div>
                {{/each}}
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>

    $(document).ready(function () {

      var crDate = $(".hdnCreateDate").val();
      $("#createDate").html(Date_to_String(crDate));

      var shDate = $(".hdnShipDate").val();
      $("#shipDate").html(Date_to_String(shDate));

      var reDate = $(".hdnReceiveDate").val();
      $("#receiveDate").html(Date_to_String(reDate));


      // handle for Status Description
      $(".contract-detail tr").each(function () {
        var stt = $(this).find(".hdnStatus").val();
        var sttDescription = $(this).find("#sttDescription");

        switch (stt) {
          case '0':
            sttDescription.html("Đặt hàng");
            break;
          case '1':
            sttDescription.html("Báo giá đơn hàng");
            break;
          case '2':
            sttDescription.html("Chấp nhận báo giá");
            break;
          case '3':
            sttDescription.html("Cho phép giao hàng");
            break;
          case '4':
            sttDescription.html("Báo giá giao hàng");
            break;
          case '5':
            sttDescription.html("Chấp nhận giao hàng");
            break;
          case '6':
            sttDescription.html("Chờ giao hàng");
            break;
          case '7':
            sttDescription.html("Đã nhận hàng");
            break;
          case '8':
            sttDescription.html("Đã hủy");
            break;
        }
      })

      function Date_to_String(date_model) {

        if (date_model == null || date_model.length == 0) {
          return '';
        }
        else {
          var formated_date = new Date(date_model);
          var day = formated_date.getDate();
          var month = formated_date.getMonth() + 1;
          var year = formated_date.getFullYear();
          var hour = formated_date.getHours();
          var minute = formated_date.getMinutes();
          var second = formated_date.getSeconds();

          var return_format = day + ' - ' + month + ' - ' + year + ', ' + hour + ':' + minute + ':' + second;

          return return_format;
        }
      }
    })

    function back() {
      history.back();
    }

  </script>

</body>

</html>