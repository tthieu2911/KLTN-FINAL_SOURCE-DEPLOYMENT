<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Thanh toán đơn hàng</title>

  <!-- Custom fonts for this template-->
  <link href="../../assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="../../assets/css/sb-admin-2.min.css" rel="stylesheet">
  <!-- Bootstrap core JavaScript-->
  <script src="../../assets/vendor/jquery/jquery.min.js"></script>
  <script src="../../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="../../assets/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="../../assets/js/sb-admin-2.min.js"></script>

</head>

<body>

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block">
                <img src="https://source.unsplash.com/random/460x580">
              </div>
              <div class="col-lg-6">
                {{# each contracts}}
                {{# each this}}
                <form action="/customer/create-payment/{{this._id}}" method="POST">
                  <!-- Exit button -->
                  <button type="button" class="btn btn-primary" onclick="back()"
                    style="margin-bottom: 1%;margin-top: 3%; margin-left: 89%;">
                    X </button>

                  <h4 style="font-weight: bold; text-align:center;">Thông tin đơn hàng</h4>

                  <div class="container-fluid">
                    <table class="table">
                      <tr>
                        <th>Mã đơn hàng</th>
                        <td>{{this._id}}</td>
                      </tr>
                      <tr>
                        <th>Tên sản phẩm</th>
                        <td>{{this.product_id.name}}</td>
                      </tr>
                      <tr>
                        <th>Người bán</th>
                        <td>{{this.supplier_id.fullName}}</td>
                      </tr>
                      <tr>
                        <th>Người mua</th>
                        <td>{{this.customer_id.fullName}}</td>
                      </tr>
                      <tr>
                        <th>Người 3</th>
                        <td>{{this.shipper_id.fullName}}</td>
                      </tr>
                      <tr>
                        <th>Giá bán </th>
                        <td>{{this.price}}</td>
                      </tr>
                      <tr>
                        <th>Địa chỉ 3</th>
                        <td>{{this.customer_id.address}}</td>
                      </tr>
                      <tr>
                      <tr>
                        <th>Ngày đặt </th>
                        <td></td>
                      </tr>
                      <tr>
                        <th>Ngày giao </th>
                        <td></td>
                      </tr>
                    </table>
                  </div>

                  <input type="hidden" name="id_product" value="{{this._id}}">
                  <!-- Paypal button -->
                  <div id="paypal-button">
                    <button class="btn btn-primary" style="margin-bottom: 5%; margin-left: 65%;">
                      <i class="fab fa-paypal">   Thanh toán</i>
                    </button>
                  </div>
                  {{/each}}
                  {{/each}}
              </div>
              </form>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>
  <script>
    function back() {
      history.back();
    }

  </script>

</body>

</html>